# ⚠️ EXAMPLE FILE
# Copy this file to application-secret.yml and fill in your actual values

spring:
  datasource:
    password: YOUR_DB_PASSWORD

  data:
    redis:
      password: # Leave empty if no password

  mail:
    host: smtp.gmail.com
    port: 587
    username: YOUR_EMAIL@gmail.com
    password: YOUR_GMAIL_APP_PASSWORD
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true
            required: true
          connectiontimeout: 5000
          timeout: 5000
          writetimeout: 5000

# JWT Configuration
jwt:
  secret: "GENERATE_YOUR_OWN_SECRET_KEY_USING_COMMAND_BELOW"
  # Generate secret: openssl rand -base64 64
  accessTokenValidity: 15  # minutes
  refreshTokenValidity: 7  # days

# LostArk API (if needed)
lostark:
  url: https://developer-lostark.game.onstove.com
  secret: YOUR_LOSTARK_API_KEY

# AWS S3 Configuration (for production file upload)
aws:
  s3:
    access-key: YOUR_AWS_ACCESS_KEY
    secret-key: YOUR_AWS_SECRET_KEY
    region: ap-northeast-2  # Seoul region
    bucket: postforge-files
